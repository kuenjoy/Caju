<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$WelcomeScreenFragment">

    <TextView android:text="Capoeira Angola Sequence Editor" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textStyle="bold" />

    <TextView
        android:text="- by SK &amp; MM 2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/imageView4"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/capoeira_angola_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageButton_seqed"
        android:layout_below="@+id/textView5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_seqlib"
        android:src="@drawable/ic_action_show_seqlib"
        android:layout_above="@+id/imageButton_movlib"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showSeqLib"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_seqed"
        android:src="@drawable/ic_action_show_seqed"
        android:layout_above="@+id/imageButton_seqlib"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:onClick="showSeqEd" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_movlib"
        android:src="@drawable/ic_action_show_movlib"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showMovLib"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sequence editor"
        android:id="@+id/textView_seqed"
        android:layout_toRightOf="@+id/imageButton_seqed"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:paddingLeft="@dimen/abc_action_bar_default_padding_material"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sequence library"
        android:id="@+id/textView_seqlib"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageButton_seqlib"
        android:layout_toEndOf="@+id/imageButton_seqlib"
        android:paddingLeft="@dimen/abc_action_bar_default_padding_material"
        android:layout_above="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movement library"
        android:id="@+id/textView_movlib"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageButton_movlib"
        android:paddingLeft="@dimen/abc_action_bar_default_padding_material"
        android:layout_above="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create, edit and review sequences"
        android:id="@+id/textView2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_alignLeft="@+id/textView_seqed"
        android:layout_alignStart="@+id/textView_seqed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageButton_seqed"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select, duplicate or delete saved sequences"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_alignBottom="@+id/imageButton_seqlib"
        android:layout_toRightOf="@+id/imageButton_seqlib"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="review movement symbols and descriptions"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:nestedScrollingEnabled="false"
        android:layout_toEndOf="@+id/imageButton_movlib"
        android:layout_toRightOf="@+id/imageButton_movlib"
        android:layout_alignBottom="@+id/imageButton_movlib"
        android:textStyle="italic" />

</RelativeLayout>
